---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Project from "../components/Project.astro";
import Item from "../components/Item.astro";
---

<Layout title="CV">
  <main class="container">
    <h1 class="font-bold text-center text-4xl">吴天</h1>
    <p class="text-center m-4">
      <span class="mr-4">
        <i class="ri-phone-line"></i>
        (+86) 133-****-****
      </span>
      <span><i class="ri-mail-line"></i> me@skywt.cn</span>
    </p>
    <!-- <p class="text-center m-2">求职意向：开发</p> -->

    <Section title="教育背景">
      <div class="item">
        <span class="font-bold mr-4">湖南大学</span>
        <span class="mr-4">信息科学与工程学院</span>
        <span class="mr-4">信息安全专业</span>
        <span class="font-kai">本科在读</span>
        <span class="date">2021 年 - 2025 年</span>
        <ul>
          <li>
            <span>主修课程：</span>
            <span class="font-kai">
              程序设计、算法与数据结构、体系结构、操作系统、数据库系统、计算机网络、编译原理等
            </span>
          </li>
          <li>
            <span>学业成绩：</span>
            <span class="font-kai">专业排名 21%，GPA 3.61</span>
          </li>
        </ul>
      </div>
    </Section>

    <Section title="专业技能">
      <!-- <p>熟悉 C++、JavaScript、TypeScript Python 等编程语言</p> -->
      <Item title="CCF 计算机软件能力认证（CSP）" subtitle="290 分" />
      <Item title="大学英语六级考试（CET6）" subtitle="566 分" />
      <Item title="国家信息安全水平证书（NISP）" subtitle="一级" />
    </Section>

    <Section title="项目经历">
      <Project
        title="湖大微生活微信小程序"
        type="团队项目"
        job="前端、运维"
        date="2022 年 - 2023 年"
        desc="为湖南大学同学提供课表查看、成绩查询等功能的微信小程序。校学工部下属“易千网络文化工作室”产品。"
        tech="React.js, Taro, TypeScript, 微信小程序"
        items={["参与项目规划和需求评审会议", "负责开发部分前端模块"]}
      />

      <Project
        title="个人网站及博客 skywt.cn"
        type="个人项目"
        date="2017 年至今"
        desc="记录学习、生活、技术分享等内容。几乎每年都会用新技术重新设计、重构网站。"
        tech="Astro, TypeScript, CSS, Docker"
        items={[
          "网站已运行六年，共百余篇文章",
          "在服务器上部署数十项自建开源服务并负责运维",
        ]}
      />

      <Project
        title="Typecho 博客主题 Daydream"
        type="个人项目"
        date="2022 年 - 2023 年"
        desc="针对 Typecho 博客系统开发的一套博客主题。"
        tech="PHP, JavaScript, CSS"
        items={['在 <i class="ri-github-line"></i> GitHub 开源并获得 68 star']}
      />

      <Project
        title="Calm Lock"
        type="个人项目"
        date="2024 年"
        desc="需要等待设定时间才能解锁查看存储内容的 iOS / macOS 软件。"
        tech="Swift, SwiftUI, iOS, macOS"
        items={[]}
      />

      <Project
        title="易千人员管理系统"
        type="团队项目"
        job="后端"
        date="2023 年"
        desc="用于湖南大学“易千网络文化工作室”人员管理。"
        tech="Go, Gin, MySQL"
        items={["参与设计软件架构", "参与系统后端开发"]}
      />

      <Project
        title="图书管理系统"
        type="团队项目"
        job="后端"
        date="2022 年"
        desc="一个功能完备的图书管理系统。“易千网络文化工作室”实习转正考核项目。"
        tech="Python, Flask, MySQL"
        items={["参与设计软件架构，负责编写 API 文档", "负责系统后端开发"]}
      />

      <Project
        title="PasteBurn 阅后即焚"
        type="个人项目"
        date="2019 年"
        desc="支持分享文本，阅后即焚的网页程序。高中课余时间开发。"
        tech="jQuery, CSS, PHP, MySQL"
        items={['在 <i class="ri-github-line"></i> GitHub 开源并获得 26 star']}
      />

      <Project
        title="Vuecho 博客系统"
        type="个人项目"
        date="2022 年"
        desc="基于 Vue.js 构建的博客前端，使用 Typecho 博客系统提供的 API。"
        tech="Vue.js, JavaScript, CSS"
        items={[]}
      />
    </Section>

    <Section title="获奖经历">
      <Item
        title="中国大学生程序设计竞赛（CCPC）广州站"
        subtitle="银奖"
        date="2021 年"
      />

      <Item
        title="CCF 非专业级软件能力认证提高组（CSP-S）"
        subtitle="一等奖"
        date="2019 年"
        note="2019 年，由于政策原因，CCF 以 CSP-S 的名义举办了全国青少年信息学奥林匹克联赛（NOIP）。<br />因故， CSP-S 一等奖等同于 NOIP 提高组复赛一等奖。"
      />

      <Item title="湖南大学校级三好学生" date="2022 年" />

      <Item
        title="湖南大学二等综合奖学金、单项奖学金"
        date="2022 年、2023 年"
      />

      <Item
        title="湖南大学第二届信息安全夺旗赛（CTF）校赛"
        subtitle="第二名"
        date="2022 年"
      />

      <Item
        title="“长城杯”第四届信息安全铁人三项赛（分区赛）"
        subtitle="二等奖"
        date="2023 年"
      />

      <Item
        title="全国大学生数学建模竞赛湖南赛区"
        subtitle="二等奖"
        date="2023 年"
      />
    </Section>

    <Section title="校园经历">
      <Item
        title="湖南大学信息安全协会（HNUSec）"
        subtitle="会长"
        date="2023 年 9 月至今"
      />

      <Item
        title="湖南大学创联学生实验室（前微软俱乐部）"
        subtitle="主席"
        date="2023 年 9 月至今"
      />

      <Item
        title="湖南大学信息科学与工程学院辩论队"
        subtitle="队长"
        date="2022 年 7 月 - 2023 年 7 月"
      />

      <Item
        title="湖南大学信息科学与工程学院 2023 年迎新团队"
        subtitle="新生班导"
        date="2023 年 9 月"
      />
    </Section>

    <Section title="自我评价">自我评价</Section>
  </main>
</Layout>
