---
interface Props {
  obj: SchoolObject;
}

const { obj } = Astro.props;
---

<div class="item">
  <span class="font-bold mr-4">{obj.name}</span>
  {obj.college && <span class="mr-4">{obj.college}</span>}
  <span class="mr-4">{obj.major}</span>
  <span class="font-kai">{obj.degree}</span>
  <span class="date">{obj.date}</span>
  <ul>
    <li>
      <span>主修课程：</span>
      <span class="font-kai">{obj.majorCourses}</span>
    </li>
    <li>
      <span>学业成绩：</span>
      <span class="font-kai">{obj.score}</span>
    </li>
  </ul>
</div>
