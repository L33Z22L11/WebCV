---
interface Props {
  item: Item;
}

const { item } = Astro.props;
---

<div class="mt-1 flex items-baseline">
  <span class="font-bold mr-4 font-ding text-lg">{item.title}</span>
  <span class="font-ding">{item.subtitle}</span>
  <span class="flex-1"></span>
  <span class="date">{item.date}</span>
</div>
