<style>
  table,
  th,
  td {
    @apply border border-gray-500 text-center;
  }

  th,
  td {
    @apply px-2;
  }

  td:first-child {
    font-family: "DingTalkJBT";
    @apply text-lg;
  }

  td {
    @apply text-sm;
  }
</style>
