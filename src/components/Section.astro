---
interface Props {
  obj: SectionObject;
  lang: string;
}

const { obj, lang } = Astro.props;

import School from "./School.astro";
import Project from "./Project.astro";
import Item from "./Item.astro";
---

<div class="my-2">
  <h2 class="font-bold text-2xl uppercase">{obj.title}</h2>

  <hr />

  {
    obj.lis && (
      <ul class="mt-1">
        {obj.lis.map((li) => (
          <li>
            <Fragment set:html={li} />
          </li>
        ))}
      </ul>
    )
  }

  {
    obj.schools &&
      obj.schools.map((school) => <School obj={school} lang={lang} />)
  }
  {
    obj.projects &&
      obj.projects.map((project) => <Project obj={project} lang={lang} />)
  }
  {obj.items && obj.items.map((item) => <Item obj={item} />)}
</div>
